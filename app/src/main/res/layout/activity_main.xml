<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/bootEventTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boot Events"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/dismissalsAllowedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Dismissals Allowed" />

    <EditText
        android:id="@+id/intervalBetweenDismissalsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Interval Between Dismissals (minutes)" />

</LinearLayout>
